@model America_Virtual.Models.ClimaPorHora
@if (Model.city != null)
{
    foreach (var item in Model.list)
    {

        <div class="clima-horas">
            <div class="dia-horas">@item.Dia</div>

            <div class="icono-hora">
                @{ var icono = "http://openweathermap.org/img/wn/" + item.weather.FirstOrDefault().icon + ".png";
                    <img class="img-clima" src="@icono">
                }

            </div>
            <div class="dia-horas">@Convert.ToInt32(item.main.temp)°</div>
        </div>

    }
}
